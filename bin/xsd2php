#!/usr/bin/env php
<?php
$paths = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php'
];
foreach ($paths as $path) {
    if (is_file($path)) {
        include $path;
        break;
    }
}

use Illuminate\Container\Container;
use Madmages\Xsd\XsdToPhp\Command\Convert as ConvertCommand;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\Output\ConsoleOutput;

$cli = new Application('Convert XSD to PHP classes Command Line Interface', '2.0');
$cli->setCatchExceptions(true);
$cli->add(Container::getInstance()->make(ConvertCommand::class));

$cli->run(null, new ConsoleOutput());
